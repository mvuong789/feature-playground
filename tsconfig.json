{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["src/typings"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
